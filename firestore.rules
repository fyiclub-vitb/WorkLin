rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        request.auth.token.admin == true;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Workspaces
    match /workspaces/{workspaceId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.ownerId || 
         request.auth.uid in resource.data.members);
    }
    
    // Pages
    match /pages/{pageId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.createdBy;
    }
    
    // Blocks
    match /blocks/{blockId} {
      allow read, write: if request.auth != null;
    }
    
    // Audit Logs
    match /auditLogs/{logId} {
      // Users can read their own logs, admins can read all
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      // Only system/Cloud Functions can write audit logs
      allow write: if false; // Cloud Functions use admin SDK, bypassing rules
    }
    
    // User Security Settings
    match /userSecurity/{userId} {
      // Users can read/write their own security settings, admins can read all
      allow read: if request.auth != null && 
        (isOwner(userId) || isAdmin());
      allow write: if request.auth != null && isOwner(userId);
    }
    
    // Security Alerts
    match /securityAlerts/{alertId} {
      // Users can read their own alerts, admins can read all
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      // Only system/Cloud Functions can write security alerts
      allow write: if false; // Cloud Functions use admin SDK, bypassing rules
    }
    
    // Search Index
    match /search_index/{indexId} {
      // Users can read search index for workspaces they have access to
      allow read: if request.auth != null;
      // Only Cloud Functions and authenticated users can write (for client-side indexing)
      allow write: if request.auth != null;
    }
    
    // Search Analytics
    match /search_analytics/{analyticsId} {
      // Users can read their own search analytics
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || isAdmin());
      // Users can write their own search analytics
      allow write: if request.auth != null && 
        (!exists(/databases/$(database)/documents/search_analytics/$(analyticsId)) || 
         resource.data.userId == request.auth.uid);
    }
  }
}

